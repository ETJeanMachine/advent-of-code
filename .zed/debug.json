// Project-local debug tasks
//
// For more documentation on how to configure debug tasks,
// see: https://zed.dev/docs/debugger
[
  {
    "label": "Build & Debug AOC 2024",
    "cwd": "$ZED_WORKTREE_ROOT/2024",
    "build": {
      "command": "cd $ZED_WORKTREE_ROOT/2024 && cargo",
      "args": ["build"]
    },
    "program": "$ZED_WORKTREE_ROOT/2024/target/debug/advent-of-code-2024",
    "args": ["10"],
    // sourceLanguages is required for CodeLLDB (not GDB) when using Rust
    "sourceLanguages": ["rust"],
    "request": "launch",
    "adapter": "CodeLLDB"
  }
]
